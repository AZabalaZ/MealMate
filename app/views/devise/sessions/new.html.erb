<div class="ring">
  <i style="--clr:#00ff0a;"></i>
  <i style="--clr:#ff0057;"></i>
  <i style="--clr:#fffd44;"></i>

  <div class="login">
    <h2>Welcome Back!</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="inputBx">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: {placeholder: "Email" } %>
      </div>

      <div class="inputBx">
        <%= f.input :password,
                    required: false,
                    input_html: {  placeholder: "Password" } %>
      </div>

        <%= f.input :remember_me, as: :boolean, label_html: { class: "text-white" }, input_html: { class: 'remember-me-checkbox' } if devise_mapping.rememberable? %>

      <div class="inputBx">
        <%= f.button :submit, "Log in", class: "submit-btn" %>
      </div>
    <% end %>

    <div class="links">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
